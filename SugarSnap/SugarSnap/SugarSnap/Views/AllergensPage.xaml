<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SugarSnap.Views.AllergensPage"
             Title="Allergens">
    <Grid Padding="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <Entry x:Name="AllergenEntry" VerticalOptions="Center" HorizontalOptions="FillAndExpand" Placeholder="Name of Allergen"/>
        <Button x:Name="AddButton" VerticalOptions="Center" HorizontalOptions="Center" Grid.Column="1" Text="Add" Clicked="AddButton_Clicked" WidthRequest="80" BackgroundColor="Accent"/>

        <ListView x:Name="AllergenListview" ItemSelected="AllergenListview_ItemSelected" Grid.Row="1" Grid.ColumnSpan="2" RowHeight="25">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
    </Grid>
</ContentPage>